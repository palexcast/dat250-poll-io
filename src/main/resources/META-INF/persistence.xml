<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
    <persistence-unit name="pollio" transaction-type="RESOURCE_LOCAL">
        <class>no.hvl.dat250.jpa.models.entities.PollEntity</class>
        <class>no.hvl.dat250.jpa.models.entities.PollOptionEntity</class>
        <class>no.hvl.dat250.jpa.models.entities.UserEntity</class>
        <class>no.hvl.dat250.jpa.models.entities.VoteEntity</class>
        <class>no.hvl.dat250.jpa.models.entities.WebhookEntity</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:derby:derbydb;create=true"/>
            <property name="javax.persistence.jdbc.user" value="test"/>
            <property name="javax.persistence.jdbc.password" value="test"/>

            <property name="eclipselink.ddl-generation" value="create-tables"/>
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>
        </properties>

    </persistence-unit>
</persistence>
